<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:columnCount="4"
            android:rowCount="6"
            android:layout_marginLeft="10dip"
            android:layout_marginBottom="10dip">

            <TextView
                android:id="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:layout_columnSpan="4"
                android:layout_rowSpan="1"
                android:gravity="right"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/bksp"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_columnSpan="1"
                android:text="Bksp"
                android:onClick="backspace"/>
            <Button
                android:id="@+id/clear"
                android:layout_width="200dip"
                android:layout_height="100dip"
                android:layout_columnSpan="2"
                android:text="C"
                android:onClick="clear"/>

            <Button

                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_columnSpan="1"
                android:text="Â±"/>

            <Button
                android:id="@+id/seven"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_columnSpan="1"
                android:text="7"
                android:onClick="addNumber_7"/>
            <Button
                android:id="@+id/eight"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_columnSpan="1"
                android:text="8"
                android:onClick="addNumber_8"/>
            <Button
                android:id="@+id/nine"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_columnSpan="1"
                android:text="9"
                android:onClick="addNumber_9"/>
            <Button
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_columnSpan="1"
                android:text="/"
                />
            <Button
                android:id="@+id/four"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_columnSpan="1"
                android:text="4"
                android:onClick="addNumber_4"/>
            <Button
                android:id="@+id/five"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_columnSpan="1"
                android:text="5"
                android:onClick="addNumber_5"/>
            <Button
                android:id="@+id/six"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_columnSpan="1"
                android:text="6"
                android:onClick="addNumber_6"/>
            <Button
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_columnSpan="1"
                android:text="*"/>
            <Button
                android:id="@+id/one"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_columnSpan="1"
                android:text="1"
                android:onClick="addNumber_1"/>
            <Button
                android:id="@+id/two"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_columnSpan="1"
                android:text="2"
                android:onClick="addNumber_2"/>
            <Button
                android:id="@+id/three"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_columnSpan="1"
                android:text="3"
                android:onClick="addNumber_3"/>
            <Button

                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_columnSpan="1"
                android:text="-"/>
            <Button
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_columnSpan="1"
                android:text="0"
                android:onClick="addNumber_0"/>
            <Button
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_columnSpan="1"
                android:text="."/>
            <Button
                android:id="@+id/equal"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_columnSpan="1"
                android:text="="
                android:onClick="equal"/>
            <Button
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_columnSpan="1"
                android:text="+"
                android:onClick="sum"/>


        </GridLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>