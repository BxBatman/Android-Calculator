<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"

            android:columnCount="4"
            android:rowCount="6"

            android:layout_marginBottom="5dip">

            <TextView
                android:id="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_columnSpan="4"
                android:layout_rowSpan="1"
                android:gravity="right"
                android:textSize="20dp"
                android:freezesText="true"
                />

            <Button
                android:id="@+id/bksp"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_columnSpan="1"
                android:textSize="20dp"
                android:text="Bksp"
                android:onClick="backspace"/>
            <Button
                android:id="@+id/clear"
                android:layout_width="200dip"
                android:layout_height="60dip"
                android:layout_columnSpan="2"
                android:textSize="20dp"
                android:text="C"
                android:onClick="clear"/>

            <Button

                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_columnSpan="1"
                android:text="Â±"
                android:textSize="20dp"
                android:onClick="symbolChange"/>

            <Button
                android:id="@+id/seven"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_columnSpan="1"
                android:text="7"
                android:textSize="20dp"
                android:onClick="addNumber_7"/>
            <Button
                android:id="@+id/eight"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_columnSpan="1"
                android:text="8"
                android:textSize="20dp"
                android:onClick="addNumber_8"/>
            <Button
                android:id="@+id/nine"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_columnSpan="1"
                android:text="9"
                android:textSize="20dp"
                android:onClick="addNumber_9"/>
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_columnSpan="1"
                android:text="/"
                android:textSize="20dp"
                android:onClick="division"
                android:theme="@style/OperationButton"
                />
            <Button
                android:id="@+id/four"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_columnSpan="1"
                android:text="4"
                android:textSize="20dp"
                android:onClick="addNumber_4"/>
            <Button
                android:id="@+id/five"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_columnSpan="1"
                android:textSize="20dp"
                android:text="5"
                android:onClick="addNumber_5"/>
            <Button
                android:id="@+id/six"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_columnSpan="1"
                android:text="6"
                android:textSize="20dp"
                android:onClick="addNumber_6"/>
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_columnSpan="1"
                android:text="*"
                android:textSize="20dp"
                android:onClick="multiplication"
                android:theme="@style/OperationButton"/>
            <Button
                android:id="@+id/one"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_columnSpan="1"
                android:text="1"
                android:textSize="20dp"
                android:onClick="addNumber_1"/>
            <Button
                android:id="@+id/two"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_columnSpan="1"
                android:text="2"
                android:textSize="20dp"
                android:onClick="addNumber_2"/>
            <Button
                android:id="@+id/three"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_columnSpan="1"
                android:text="3"
                android:textSize="20dp"
                android:onClick="addNumber_3"/>
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_columnSpan="1"
                android:text="-"
                android:textSize="20dp"
                android:onClick="subtraction"
                android:theme="@style/OperationButton"/>
            <Button
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_columnSpan="1"
                android:text="0"
                android:onClick="addNumber_0"/>
            <Button
                android:id="@+id/coma"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_columnSpan="1"
                android:text="."
                android:onClick="addComa"/>
            <Button
                android:id="@+id/equal"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_columnSpan="1"
                android:text="="
                android:onClick="equal"/>
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_columnSpan="1"
                android:text="+"
                android:onClick="sum"
                android:theme="@style/OperationButton"/>


        </GridLayout>
    </RelativeLayout>



</android.support.constraint.ConstraintLayout>